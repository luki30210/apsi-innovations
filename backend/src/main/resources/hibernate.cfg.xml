<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <!--<property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>-->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>

        <!-- Assume test is the database name -->

        <property name="hibernate.connection.url">jdbc:mysql://torales.nazwa.pl:3306/innovative_ideas</property>
        <property name="hibernate.connection.username">apsi_user</property>
        <property name="hibernate.connection.password">bobr45</property>

        <property name="hibernate.current_session_context_class">thread</property>

        <!-- List of annotation mapping files -->
        <mapping class="pl.pw.elka.apsi.innovations.hibernate.model.Attachment"/>
        <mapping class="pl.pw.elka.apsi.innovations.hibernate.model.Idea"/>
        <mapping class="pl.pw.elka.apsi.innovations.hibernate.model.Keyword"/>
        <mapping class="pl.pw.elka.apsi.innovations.hibernate.model.Opinion"/>
        <mapping class="pl.pw.elka.apsi.innovations.hibernate.model.Rating"/>
        <mapping class="pl.pw.elka.apsi.innovations.hibernate.model.Subject"/>
        <mapping class="pl.pw.elka.apsi.innovations.hibernate.model.User"/>

    </session-factory>
</hibernate-configuration>